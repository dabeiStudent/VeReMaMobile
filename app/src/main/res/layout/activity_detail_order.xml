<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="DetailOrder"
    tools:context=".DetailOrder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1070dp"
            android:orientation="vertical"
            android:background="#f7f7df">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/top_background_main">

                <ImageView
                    android:id="@+id/ivSetting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/setting"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"/>
                <TextView
                    android:id="@+id/tvIdorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:text="Mã phiếu"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/ivVehicle"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="64dp"
                    android:src="@drawable/vehicle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvVehiclename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tên phương tiện"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/ivVehicle"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="@+id/ivVehicle"
                    app:layout_constraintTop_toBottomOf="@+id/ivVehicle" />

                <TextView
                    android:id="@+id/tvVehicleid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Biển số"
                    android:textSize="25dp"
                    app:layout_constraintEnd_toEndOf="@+id/tvVehiclename"
                    app:layout_constraintHorizontal_bias="0.489"
                    app:layout_constraintStart_toStartOf="@+id/tvVehiclename"
                    app:layout_constraintTop_toBottomOf="@+id/tvVehiclename" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa sửa"
                    android:textSize="20dp"
                    android:textColor="@color/teal_200"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvVehicleid"
                    app:layout_constraintEnd_toEndOf="@+id/tvVehicleid"
                    app:layout_constraintStart_toStartOf="@+id/tvVehicleid" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_background_2">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivNv"
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:src="@drawable/human"/>
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="Mã nhân viên"/>
                        <TextView
                            android:id="@+id/tvNv"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Mã nhân viên"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/white_background">
                        <ImageView
                            android:id="@+id/ivKh"
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:src="@drawable/human2"/>
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="Tên khách hàng"/>
                        <TextView
                            android:id="@+id/tvKh"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Tên"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/cv1"
                    app:layout_constraintStart_toStartOf="parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/white_background">
                        <ImageView
                            android:id="@+id/ivNgaynhan"
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:src="@drawable/calendar"/>
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="Ngày nhận xe"/>
                        <TextView
                            android:id="@+id/tvNgaynhan"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Ngày"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv2">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/white_background">
                        <ImageView
                            android:id="@+id/ivNgaysua"
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:src="@drawable/calendar"/>
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="Ngày sửa xong"/>
                        <TextView
                            android:id="@+id/tvNgaysua"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Ngày"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv3">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/white_background">
                        <ImageView
                            android:id="@+id/ivThoigian"
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:src="@drawable/clock"/>
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="Dự kiến"/>
                        <TextView
                            android:id="@+id/tvThoigian"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Tiếng"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/cv4"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/white_background">
                        <ImageView
                            android:id="@+id/ivDichvu"
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:src="@drawable/tools"/>
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="Dịch vụ"/>
                        <TextView
                            android:id="@+id/tvDichvu"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Tên"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tvTongtien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Tổng tiền: "
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center"
                    android:layout_marginBottom="30dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>